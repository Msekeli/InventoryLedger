@page "/items"
@inject IItemService ItemService
@inject NavigationManager Nav

<h3 class="mt-3">Items</h3>

<button class="btn btn-primary mb-3" @onclick="Create">
    Add New Item
</button>

@if (items == null)
{
    <p>Loading...</p>
}
else if (items.Count == 0)
{
    <p>No items found.</p>
}
else
{
    <div class="table-responsive shadow-sm">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>SKU</th>
                    <th>Name</th>
                    <th>Unit Price</th>
                    <th>On Hand</th>
                    <th style="width: 180px;"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in items)
                {
                    <tr>
                        <td>@item.SKU</td>
                        <td>@item.Name</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.OnHand</td>
                        <td>
                            <button class="btn btn-sm btn-outline-secondary me-2"
                                    @onclick="() => Edit(item.Id)">
                                Edit
                            </button>

                            <button class="btn btn-sm btn-outline-danger"
                                    @onclick="() => ConfirmDelete(item.Id, item.Name)">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (showConfirm)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content shadow">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>@deleteName</strong>?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" @onclick="DeleteItem">Delete</button>
                    <button class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ItemResponseDto>? items;

    private int deleteId;
    private string deleteName = "";
    private bool showConfirm = false;

    protected override async Task OnInitializedAsync()
    {
        items = await ItemService.GetAllAsync();
    }

    private void Create() => Nav.NavigateTo("/items/create");
    private void Edit(int id) => Nav.NavigateTo($"/items/edit/{id}");

    private void ConfirmDelete(int id, string name)
    {
        deleteId = id;
        deleteName = name;
        showConfirm = true;
    }

    private async Task DeleteItem()
    {
        var success = await ItemService.DeleteAsync(deleteId);

        if (success)
        {
            items = await ItemService.GetAllAsync(); // refresh
        }

        showConfirm = false;
    }

    private void CancelDelete()
    {
        showConfirm = false;
    }
}
