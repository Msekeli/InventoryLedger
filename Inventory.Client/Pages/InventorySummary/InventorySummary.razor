@page "/inventory"
@inject IInventoryServiceClient InventoryService
@inject IInventoryServiceClient InventoryService

<h3 class="mt-3">Inventory Summary</h3>

@if (summary is null)
{
    <p>Loading...</p>
}
else
{
    <div class="card p-3 shadow-sm mb-3">
        <h5>Total Stock On Hand: @(summary.Items.Sum(i => i.OnHand))</h5>
        <h5>Low Stock Items: @(summary.Items.Count(i => i.IsLow))</h5>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Item</th>
                    <th>SKU</th>
                    <th>On Hand</th>
                    <th>Low Threshold</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var item in summary.Items)
            {
                <tr class="@(item.IsLow ? "table-danger" : "")">
                    <td>@item.Name</td>
                    <td>@item.SKU</td>
                    <td>@item.OnHand</td>
                    <td>@item.LowStockThreshold</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

@code {
    private InventorySummaryDto? summary;

    protected override async Task OnInitializedAsync()
    {
        summary = await InventoryService.GetSummaryAsync();
    }
}
