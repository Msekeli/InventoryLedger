<!-- Quick Actions -->
<div class="mt-4 d-flex gap-3">
    <button class="btn btn-outline-warning fw-bold px-4"
            @onclick="@(() => Nav.NavigateTo("/items"))">
        Manage Items
    </button>

    <button class="btn btn-outline-warning fw-bold px-4"
            @onclick="@(() => Nav.NavigateTo("/transactions"))">
        Record Transaction
    </button>

    <button class="btn btn-outline-warning fw-bold px-4"
            @onclick="@(() => Nav.NavigateTo("/inventory"))">
        View Summary
    </button>
</div>
